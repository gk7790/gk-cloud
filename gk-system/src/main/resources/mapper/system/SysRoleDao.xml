<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gk.system.dao.SysRoleDao">

    <select id="getList" resultType="com.gk.system.entity.SysRoleEntity">
        SELECT r.id, r.`name`, r.remark, r.dept_id, d.`name` as 'deptName', r.updated_by, r.updated_at, r.created_by, r.created_at
        FROM sys_role r LEFT JOIN sys_dept d ON r.dept_id = d.id
        <where>
            <if test="name != null and name.trim() != ''">
                and r.`name` like concat("%", #{accountName}, "%")
            </if>
            <if test="deptIdList != null">
                and r.dept_id in
                <foreach item="id" collection="deptIdList" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </if>
        </where>
    </select>
</mapper>